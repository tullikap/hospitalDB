<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="15dp"
            android:text="Name:" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView1"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="14dp"
            android:text="Address:" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="66dp"
            android:text="D.O.B." />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView2"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="16dp"
            android:text="Insurance:" />

        <TextView
            android:id="@+id/txt_ptnname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView4"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="16dp"
            android:text="Physician:" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_ptnname"
            android:layout_below="@+id/txt_ptnname"
            android:layout_marginTop="19dp"
            android:text="Date in:" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView6"
            android:layout_alignBottom="@+id/textView6"
            android:layout_alignRight="@+id/textView3"
            android:text="Date out:" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView6"
            android:layout_alignLeft="@+id/textView7"
            android:text="Type:" />

        <Button
            android:id="@+id/btn_bill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_backPFSPatientInfo"
            android:layout_alignRight="@+id/btn_backPFSPatientInfo"
            android:layout_marginBottom="58dp"
            android:layout_toRightOf="@+id/textView4"
            android:text="Bill" />

        <Button
            android:id="@+id/btn_backPFSPatientInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/textView7"
            android:layout_marginBottom="58dp"
            android:text="Back to Main Page" />

        <TextView
            android:id="@+id/txt_patientname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView1"
            android:layout_toLeftOf="@+id/textView8"
            android:layout_toRightOf="@+id/textView2"
            android:text="TextView" />

        <TextView
            android:id="@+id/txt_ptndob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignParentRight="true"
            android:text="TextView" />

        <TextView
            android:id="@+id/txt_ptnaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignLeft="@+id/btn_backPFSPatientInfo"
            android:layout_toLeftOf="@+id/txt_ptndob"
            android:text="TextView" />

        <TextView
            android:id="@+id/txt_ptnins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView4"
            android:layout_alignBottom="@+id/textView4"
            android:layout_alignLeft="@+id/btn_bill"
            android:layout_marginLeft="16dp"
            android:layout_toLeftOf="@+id/txt_ptndob"
            android:text="TextView" />

        <TextView
            android:id="@+id/txt_ptnphysician"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txt_ptnname"
            android:layout_alignLeft="@+id/btn_bill"
            android:layout_alignRight="@+id/txt_patientname"
            android:text="TextView" />

        <TextView
            android:id="@+id/txt_ptntype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView8"
            android:layout_alignBottom="@+id/textView8"
            android:layout_toRightOf="@+id/textView7"
            android:text="TextView" />

        <TextView
            android:id="@+id/txt_ptndatein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView6"
            android:layout_alignLeft="@+id/txt_ptnphysician"
            android:text="TextView" />

        <TextView
            android:id="@+id/txt_ptndateout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView7"
            android:layout_alignBottom="@+id/textView7"
            android:layout_alignParentRight="true"
            android:text="TextView" />

    </RelativeLayout>

</LinearLayout>
