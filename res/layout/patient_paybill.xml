<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="26dp"
            android:text="Amount:" />

        <Button
            android:id="@+id/btn_backBill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:text="Back to Main Page" />

        <Button
            android:id="@+id/btn_confirmBill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_backBill"
            android:layout_alignLeft="@+id/btn_backBill"
            android:layout_alignRight="@+id/btn_backBill"
            android:layout_marginBottom="16dp"
            android:text="Confirm" />

        <TextView
            android:id="@+id/txt_staffname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView1"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="26dp"
            android:text="Payment Method:" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView1"
            android:layout_alignBottom="@+id/textView1"
            android:layout_alignRight="@+id/txtbox_cardholdername"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/textView1"
            android:ems="10" />

        <RadioButton
            android:id="@+id/rbtn_Check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txt_staffname"
            android:layout_alignBottom="@+id/txt_staffname"
            android:layout_marginLeft="21dp"
            android:layout_toRightOf="@+id/txt_staffname"
            android:text="Check" />

        <RadioButton
            android:id="@+id/rbtn_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/rbtn_Check"
            android:layout_below="@+id/rbtn_Check"
            android:text="Card" />

        <RadioButton
            android:id="@+id/rbtn_paypal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/rbtn_card"
            android:layout_below="@+id/rbtn_card"
            android:text="Paypal" />

        <EditText
            android:id="@+id/txtbox_cardholdername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignLeft="@+id/txtbox_cardnumber"
            android:ems="10" />

        <EditText
            android:id="@+id/txtbox_cardnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txt_staffdate"
            android:layout_alignBottom="@+id/txt_staffdate"
            android:layout_toRightOf="@+id/txt_staffdate"
            android:ems="10" />

        <TextView
            android:id="@+id/txt_datein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_staffdate"
            android:layout_below="@+id/txtbox_cardnumber"
            android:layout_marginTop="34dp"
            android:text="CVV:" />

        <EditText
            android:id="@+id/txtbox_cardcvv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txt_datein"
            android:layout_alignBottom="@+id/txt_datein"
            android:layout_alignLeft="@+id/txtbox_cardnumber"
            android:ems="10" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txtbox_cardnumber"
            android:layout_alignLeft="@+id/txt_staffname"
            android:layout_marginBottom="26dp"
            android:text="Name:" />

        <TextView
            android:id="@+id/txt_staffdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView3"
            android:layout_centerVertical="true"
            android:text="Number:" />

    </RelativeLayout>

</LinearLayout>
