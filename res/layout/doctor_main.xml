<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/txt_staffname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView1"
            android:layout_alignRight="@+id/btn_appnt"
            android:layout_marginLeft="26dp"
            android:layout_toRightOf="@+id/textView1"
            android:gravity="right"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView1"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="15dp"
            android:text="Date:" />

        <TextView
            android:id="@+id/txt_staffdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignLeft="@+id/txt_staffname"
            android:layout_alignRight="@+id/txt_staffname"
            android:gravity="right"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="22dp"
            android:layout_toLeftOf="@+id/btn_patientlist"
            android:text="Name:" />

        <Button
            android:id="@+id/btn_appnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_patientlist"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="33dp"
            android:text="View Appointments" />

        <Button
            android:id="@+id/btn_patientlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btn_appnt"
            android:layout_alignRight="@+id/btn_appnt"
            android:layout_below="@+id/txt_staffdate"
            android:layout_marginTop="120dp"
            android:text="View Patients" />

    </RelativeLayout>

</LinearLayout>
